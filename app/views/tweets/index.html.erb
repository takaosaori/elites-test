<div class="wrapper tweet_wrapper">

    <div class="form-inline pull-right" style="margin-bottom:8px; margin-left:8px;">
      <div class="form-group">
        <%= search_form_for @q do |f| %>
          <%= f.search_field :content, placeholder: "検索", class: "form-control" %>
      </div>
          <%= f.submit "検索", class: "btn btn-success" %>
        <% end %>
    </div>   

  <!-- メッセージ入力 -->
  <div class="input">
    <%= form_for @input_content do |f| %>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "本文は140字以内で投稿", class: 'form-control', rows: 3 %>
      </div>
      <div class="actions clearfix">
        <div class="alert">
          <% if flash[:alert] %>
            <% flash[:alert].each do |message| %>
              <p class="alert"><%= message %></p>
            <% end %>
          <% end %>
        </div>          
        <div class="post">
          <%= f.submit '投稿', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- タイムライン -->
  <div class="tweet">
    <% @tweet.each do |t| %>
      <div class="per <%= 'mine' if t.user.id == current_user.id %>">
        <p class="icon">
            <%= image_tag t.user.image.url %>
        </p>
        <p class="content">
          <%= t.user.name %>
          <%= t.created_at %>
          <br><%= t.content %>
        </p>
      </div>
    <% end %>
    
    <%= paginate @tweet %>
  </div>  
</div>