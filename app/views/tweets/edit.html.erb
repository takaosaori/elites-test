<div class="wrapper tweet_wrapper">
  <div class="input">
    <%= form_for @tweet do |f| %>
      <div class="form-group">
        <%= f.text_area :content, placeholder: "本文は140字以内で投稿", class: 'form-control', rows: 3 %>
      </div>
      <div class="actions clearfix">
        <div class="alert">
          <% if flash[:alert] %>
            <% flash[:alert].each do |message| %>
              <p class="alert"><%= message %></p>
            <% end %>
          <% end %>
        </div>          
        <div class="post">
          <%= f.submit '更新', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>  

<div class="del">
  <%= button_to '削除', tweet_path(@tweet), method: :delete, class: 'btn btn-danger', data: {confirm: '削除してよろしいですか？'}  %>
</div>